<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <template id="cicon_hr_training_internal_layout">
    <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <t t-call="cicon_hr_training.cicon_emp_record_layout_header" />
        <t t-raw="0" />
        <t t-call="cicon_hr_training.cicon_emp_record_layout_footer" />
    </template>

        <template id="cicon_emp_record_layout_header">
            <div class="header">
                    <div class="row">
                        <div class=" col-xs-2">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                        </div>
                        <div class="col-xs-6 text-left" style="margin-top:25px;padding-left:25px;" t-field="company.rml_header1"/>
                    </div>
                    <div class="row mt16">
                        <div class="col-xs-8">
                            <strong>PROCEDURE NAME : MANAGEMENT OF RESOURCES</strong>
                        </div>
                        <div class="col-xs-4">
                            ISSUE NO. :0
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <strong>PROCEDURE No. : CIC-13</strong>
                        </div>
                        <div class="col-xs-4">
                            <ul class="list-inline">
                                <li>Page:</li>
                                <li><span class="page"/></li>
                                <li>of</li>
                                <li><span class="topage"/></li>
                             </ul>
                        </div>
                    </div>

                    <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;"></div>
                    </div>
                </div>
            </div>
        </template>


        <template id="cicon_emp_record_layout_footer">
            <div class="footer">
                <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;"></div>
                    </div>
                </div>
            </div>
        </template>



    <template id="hr_emp_training_record_report_template">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="cicon_hr_training.cicon_hr_training_internal_layout">
                    <div class="page">
                    <style type="text/css">
                        <!--.table-bordered{-->
                          <!--font-size: 9px;-->
                        <!--}-->
                    </style>
                    <div class="row">
                        <table class="table table-bordered">
                           <thead>
                               <tr>
                                   <th colspan="2" class="text-center" style="vertical-align:middle;" > EMPLOYEE TRAINING RECORD</th>
                                   <th colspan="3">
                                       <table style="width:100%">
                                           <tr>
                                            <td>DEPT / DIV : </td>
                                            <th> <span t-field="o.department_id.name" />  </th>
                                           </tr>
                                           <tr>
                                            <td>EMPLOYEE NAME :</td>
                                            <th > <span t-field="o.name" /> </th>
                                           </tr>
                                           <tr>
                                               <td>POSITION :</td>
                                               <th> <span t-field="o.job_id.name" /> </th>
                                           </tr>
                                           <tr>
                                               <td>EMPLOYEE NO. :</td>
                                               <th> <span t-field="o.cicon_employee_id" t-field-options='{"widget": "char"}' /> </th>
                                           </tr>
                                       </table>
                                   </th>
                               </tr>
                               <tr>
                                   <th>SR.</th>
                                   <th>QUALIFICATION / EXPERIENCE /TRAINING </th>
                                   <th>PERIOD </th>
                                   <th>CERTIFICATE </th>
                                   <th>NOTES </th>
                               </tr>
                           </thead>
                            <tbody>
                                <tr t-foreach="o.training_ids" t-as="c" >
                                    <td> <span t-esc="c_index+1"/> </td>
                                    <td> <span t-field="c.title_id.name"/> </td>
                                    <td> <span t-field="c.training_date"/> </td>
                                    <td> <span t-field="c.name"/> </td>
                                    <td> <span t-field="c.note"/>  </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                </t>
            </t>
        </t>
    </template>
</data>
</odoo>
